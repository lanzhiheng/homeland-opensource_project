<div class="col-sm-6 col-md-4">
  <div class="thumbnail">

    <%=link_to(image_tag(project_thumbnail.avatar.url, :class => "project_cover_thumbnail"), opensource_project_path(project_thumbnail)) %>

    <div class="caption">
      <h3 class="opensource-project-title"><%= project_thumbnail.title %></h3>
      <p class="project_summary_thumbnail"><%= project_thumbnail.summary %></p>
      <p>
      <div class="media-left">
        <a href="<%= project_thumbnail.proj_url %>" class="btn btn-primary" role="button">主页</a>
        <a href="<%= project_thumbnail.doc_url %>" class="btn btn-default" role="button">文档</a>
      </div>
      <div class="media-right project_likes_thumbnail">
        <div class="icon"><i class="fa fa-heart active"></i> <%= project_thumbnail.likes_count %></div>
      </div>
      </p>
    </div>
  </div>
</div>